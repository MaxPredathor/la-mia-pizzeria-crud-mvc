@{
    ViewData["Title"] = "Create";
    Layout = "_Pizzeria";
}
@model PizzaFormModel

<div class="container">
    <form asp-controller="Pizza" asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <strong>Nome:</strong>
            <input asp-for="Pizza.Nome" class="d-block w-100" />
            <span asp-validation-for="Pizza.Nome" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Descrizione:</strong>
            <input asp-for="Pizza.Descrizione" class="d-block w-100" />
            <span asp-validation-for="Pizza.Descrizione" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Immagine (Link):</strong>
            <input asp-for="Pizza.Immagine" class="d-block w-100" />
            <span asp-validation-for="Pizza.Immagine" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Prezzo:</strong>
            <input asp-for="Pizza.Prezzo" class="d-block w-100" />
            <span asp-validation-for="Pizza.Prezzo" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Categoria:</strong>
            <select asp-for="Pizza.CategoriaId" class="d-block w-100">
                <option value=""></option>
                @foreach (Categoria categoria in Model.Categorie)
                {
                    <option value="@categoria.Id">@categoria.Nome</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <strong>Ingredienti:</strong>
            @foreach (var ingrediente in Model.Ingredienti)
            {
                <div>
                    <input type="checkbox" asp-for="SelectedIngredienti" value="@ingrediente.Id" />
                    <label>@ingrediente.Nome</label>
                </div>
            }
        </div>
        <div class="text-end">
            <input type="submit" class="btn btn-small btn-info" value="Salva">
        </div>
    </form>
</div>

